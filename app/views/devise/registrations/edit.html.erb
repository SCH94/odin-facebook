<% provide(:title, 'Edit Profile') %>
<div class='col-md-4'><%= render 'shared/profile_pic' %></div>
<div class='col-md-3'>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class: 'col-form-label col-form-label-lg' %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control input-lg' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
  <%= f.label :name, class: 'col-form-label col-form-label-lg' %><br />
  <%= f.text_field :name, autofocus: true, class: 'form-control input-lg' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'col-form-label col-form-label-lg' %> <i>(leave blank for no change)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg' %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'col-form-label col-form-label-lg' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-lg' %>
  </div>

  <% if f.object.encrypted_password.present? %>
    <div class="field">
      <%= f.label :current_password, class: 'col-form-label col-form-label-lg' %> <i>(to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", class: 'form-control input-lg' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Update", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
</div>
<div class='col-md-5'></div>

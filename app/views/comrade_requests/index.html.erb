<% provide(:title, 'Comrade requests') %>
<div class='col-md-4'></div>
<div class='col-md-8'>
<% if @comrade_requests.any? %>
  <% @comrade_requests.each do |r| %>
  <div class='comrade-row'>
    <div class='comrade-info'>
      <% user = r.requestor %>
      <%= image_tag(user.profile_pic.url) %>
      <p><%= user.name %></p>
    </div>
    <div class='manage-request'>
      <%= button_to 'Accept', comrade_request_path(r.id), { method: :patch, class: 'btn btn-primary btn-lg' }  %>
      <%= button_to 'Delete', comrade_request_path(r.id), { method: :delete, class: 'btn btn-primary btn-lg' } %>
    </div>
  </div>
<% end %>
<% else %>
  <p>You have no comrade requests.</p>
  <p>Go do things worthy of being a comrade!</p>
<% end %>
</div>

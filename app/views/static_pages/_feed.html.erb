<% if @posts.any? %>
  <% @posts.each do |p| %>
    <div class="post">
      <div class="post-info">
        <%= image_tag p.user.profile_pic.url %>
	<span>
		<%= p.user.name %><br/>
		<%= time_ago_in_words(p.created_at) %>
	</span>
       </div>
       <div class="post-content"><p><%= p.content %></p></div>
    </div>
  <% end %>
<% end %>


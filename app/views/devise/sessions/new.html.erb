<% provide(:title, 'Log in') %>

<div class='col-md-4'></div>
<div class='col-md-3'>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: 'col-form-label col-form-label-lg' %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-input input-lg' %>
  </div>

  <div class="field">
	  <%= f.label :password, class: 'col-form-label col-form-label-lg' %>(<%= link_to 'Forgot Password', new_user_password_url %>)<br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, class: 'col-form-label col-form-label-lg' %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
<%= link_to image_tag('facebook_button.png'), user_facebook_omniauth_authorize_url, class: 'social-button' %>
</div>
<div class='col-md-5'></div>

<% provide(:title, 'Sign Up') %>
<div class="col-md-4"></div>
<div class="col-md-3">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

<div class="field">
<%= f.label :email, class: 'col-form-label col-form-label-lg' %><br />
<%= f.email_field :email, autofocus: true, class: 'form-control input-lg' %>
</div>

<% if f.object.password_required? %>
<div class="field">
  <%= f.label :password, class: 'col-form-label col-form-label-lg' %>
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg' %>
  </div>

  <div class="field">
  <%= f.label :password_confirmation, class: 'col-form-label col-form-label-lg' %><br />
  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-lg' %>
  </div>
<% end %>

<div class="actions">
<%= f.submit "Sign up", class: 'btn btn-lg btn-primary' %>
</div>
<% end %>
<%= link_to image_tag('facebook_button.png'), user_facebook_omniauth_authorize_url, class: 'social-button' %>
</div>
<div class="col-md-5"></div>
